#!/usr/bin/env bash

function _sshkeygen() {

# Encrypt key and save in dropbox
KEY=$(/usr/bin/ssh-keygen $@ | awk 'NR==2' | sed -e 's/Your identification has been saved in //g' | rev | cut -c 2- | rev)
KEY=$(basename $KEY)
WD=`pwd`
cd ~/.ssh
encrypt $KEY $KEY.pub
mv $KEY.enc ~/Dropbox/SSH\ Keys
cd $WD

}

_sshkeygen "$@"